{
	"name": "@bulvar/bulma",
	"version": "0.11.13",
	"description": "Modern CSS framework based on Flexbox and CSS Variables",
	"keywords": [
		"bulma",
		"bulma extentions",
		"css",
		"sass",
		"flexbox",
		"responsive",
		"css properties",
		"css variables",
		"framework"
	],
	"homepage": "https://github.com/daniil4udo/bulvar/tree/master/packages/bulma",
	"bugs": {
		"url": "https://github.com/daniil4udo/bulvar/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/daniil4udo/bulvar.git"
	},
	"license": "MIT",
	"author": {
		"name": "Daniil Chumachenko",
		"email": "daniil4udo@gmail.com",
		"url": "https://github.com/daniil4udo"
	},
	"maintainers": [
		"Daniil Chumachenko <daniil4udo@gmail.com>"
	],
	"sideEffects": [
		"*.css",
		"*.sass",
		"*.scss"
	],
	"type": "module",
	"main": "bulma.sass",
	"unpkg": "css/bulma.css",
	"style": "bulma/css/bulma.min.css",
	"files": [
		"css",
		"sass",
		"themes",
		"bulma.sass",
		"bulma-rtl.sass",
		"LICENSE",
		"README.md"
	],
	"scripts": {
		"build": "concurrently --timings -c auto -m 1 -g \"pnpm:clean\" \"pnpm:compile\" \"pnpm:prefix\" \"pnpm:minify\"",
		"clean": "rimraf css && mkdir css",
		"compile": "concurrently -c auto \"pnpm:compile:*\" ",
		"compile:main": "sass --verbose --error-css bulma.sass | node banner.js > css/bulma.css",
		"compile:rtl": "sass --verbose --error-css bulma-rtl.sass | node banner.js > css/bulma-rtl.css",
		"minify": "concurrently -c auto \"pnpm:minify:*\" ",
		"minify:main": "csso -o css/bulma.min.css -i css/bulma.css --stat",
		"minify:rtl": "csso -o css/bulma-rtl.min.css -i css/bulma-rtl.css --stat",
		"package:publish": "pnpm publish --access public",
		"prefix": "concurrently -c auto \"pnpm:prefix:*\" ",
		"prefix:main": "postcss --config ../../postcss.config.js --output css/bulma.css css/bulma.css",
		"prefix:rtl": "cross-env NODE_ENV=RTL postcss --config ../../postcss.config.js --output css/bulma-rtl.css css/bulma-rtl.css",
		"watch": "sass --verbose --error-css --no-source-map --color bulma.sass css/bulma.css --watch"
	}
}

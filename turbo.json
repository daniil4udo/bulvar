{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "ui": "tui",
    "tasks": {
        "compile": {
            "dependsOn": ["^compile"],
            "outputs": ["css/**"]
        },
        // https://turbo.build/repo/docs/crafting-your-repository/configuring-tasks#dependent-tasks-that-can-be-ran-in-parallel
        "transit": {
            "dependsOn": ["^transit"] // <- https://turbo.build/repo/docs/core-concepts/package-and-task-graph#transit-nodes
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "watch": {
            "cache": false,
            "persistent": true
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": []
        },
        "clean": {
            "cache": false
        }
    }
}

{
	"name": "@bulvar/root",
	"description": "DMC Bulma Monorepo",
	"keywords": [
		"css",
		"css vars",
		"css properties",
		"sass",
		"flexbox",
		"responsive",
		"framework"
	],
	"homepage": "https://github.com/daniil4udo/bulvar",
	"bugs": {
		"url": "https://github.com/daniil4udo/bulvar/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/daniil4udo/bulvar.git"
	},
	"license": "MIT",
	"author": {
		"name": "Daniil Chumachenko",
		"email": "daniil4udo@gmail.com",
		"url": "https://github.com/daniil4udo"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"postinstall": "lerna link",
		"release": "lerna version --no-push --no-commit-hooks",
		"watch": "lerna run --parallel start",
		"publish": "lerna run --parallel publish",
		"version": "yarn install && yarn deploy",
		"deploy": "lerna run deploy --stream",
		"lint": "run-p --continue-on-error lint:all:*",
		"lint:prettier": "prettier --write --loglevel warn",
		"lint:stylelint": "stylelint --color --fix",
		"lint:markdownlint": "markdownlint --fix -i CHANGELOG.md -i packages/**/CHANGELOG.md",
		"lint:all:vars": "fusv packages/",
		"lint:all:stylelint": "pnpm lint:stylelint \"packages/**/*.{sass,scss}\" --cache --cache-location .cache/.stylelintcache --rd --color",
		"lint:all:markdownlint": "pnpm lint:markdownlint \"packages/**/*.md\" \"*.md\"",
		"cz": "git cz"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.1",
		"commitizen": "^4.2.4",
		"cross-env": "^7.0.3",
		"csso-cli": "^3.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"cz-emoji": "^1.3.1",
		"find-unused-sass-variables": "^4.0.3",
		"husky": "^4",
		"lerna": "^4.0.0",
		"lint-staged": "^12.1.5",
		"markdownlint-cli": "^0.30.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.6",
		"postcss-cli": "^9.1.0",
		"postcss-scss": "^4.0.3",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"rtlcss": "^3.5.0",
		"sass": "^1.47.0",
		"stylelint": "^14.5.1",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard-scss": "^3.0.0",
		"stylelint-selector-no-empty": "^1.0.8",
		"sugarss": "^4.0.1"
	},
	"pnpm": {
		"neverBuiltDependencies": [
			"fsevents",
			"level",
			"node-gyp"
		],
		"overrides": {
			"@stylelint/postcss-markdown": "npm:postcss-markdown@latest",
			"read-package-tree": "npm:@npmcli/arborist",
			"postcss": "^8.0.0",
			"stylelint": "^14.0.0",
			"stylelint-order": "^5.0.0",
			"uuid": "^8.0.0"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"stylelint-order": "^5.0.0"
	}
}

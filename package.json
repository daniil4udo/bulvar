{
	"name": "@bulvar/root",
	"description": "DMC Bulma Monorepo",
	"keywords": [
		"css",
		"css vars",
		"css properties",
		"sass",
		"flexbox",
		"responsive",
		"framework"
	],
	"homepage": "https://github.com/daniil4udo/bulvar",
	"bugs": {
		"url": "https://github.com/daniil4udo/bulvar/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/daniil4udo/bulvar.git"
	},
	"license": "MIT",
	"author": {
		"name": "Daniil Chumachenko",
		"email": "daniil4udo@gmail.com",
		"url": "https://github.com/daniil4udo"
	},
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"prepare": "husky install",
		"watch": "lerna run --parallel start",
		"version": "pnpm install && pnpm build",
		"build": "lerna run deploy --stream",
		"package:publish": "lerna run --parallel package:publish",
		"package:release": "lerna version --no-push --no-commit-hooks",
		"lint": "run-p --continue-on-error lint:all:*",
		"lint:prettier": "prettier --write --loglevel warn",
		"lint:stylelint": "stylelint --fix",
		"lint:markdownlint": "markdownlint --fix -i CHANGELOG.md -i packages/**/CHANGELOG.md",
		"lint:all:vars": "fusv packages/",
		"lint:all:stylelint": "pnpm lint:stylelint \"packages/**/*.{sss,scss}\" --cache --cache-location .cache/.stylelintcache --rd --color",
		"lint:all:markdownlint": "pnpm lint:markdownlint \"packages/**/*.md\" \"*.md\"",
		"cz": "git cz"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.12",
		"commitizen": "^4.2.5",
		"cross-env": "^7.0.3",
		"csso-cli": "^4.0.1",
		"cz-conventional-changelog": "^3.3.0",
		"cz-emoji": "1.3.1",
		"find-unused-sass-variables": "^4.0.4",
		"husky": "^8.0.1",
		"lerna": "^6.0.1",
		"lint-staged": "^13.0.3",
		"markdownlint-cli": "^0.32.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.18",
		"postcss-cli": "^10.0.0",
		"postcss-sass": "^0.5.0",
		"postcss-scss": "^4.0.5",
		"prettier": "^2.7.1",
		"rimraf": "^3.0.2",
		"rtlcss": "^4.0.0",
		"sass": "^1.55.0",
		"stylelint": "^14.14.0",
		"stylelint-config-idiomatic-order": "^9.0.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard-scss": "^6.1.0",
		"sugarss": "^4.0.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"pnpm": {
		"neverBuiltDependencies": [
			"fsevents",
			"level",
			"node-gyp"
		],
		"overrides": {
			"@stylelint/postcss-markdown": "npm:postcss-markdown@latest",
			"ansi-regex": "^5.0.1",
			"read-package-tree": "npm:@npmcli/arborist@latest",
			"string-width": "^4.0.0",
			"stylelint": "^14.0.0",
			"uuid": "^8.0.0"
		}
	}
}
